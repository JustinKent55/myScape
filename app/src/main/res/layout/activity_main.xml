<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_top"
    android:paddingBottom="@dimen/activity_vertical_margin_bottom"
    tools:context=".MainActivity"
    android:background="@drawable/menu_field"
    android:id="@+id/mainMenu">


    <ImageView
        android:layout_width="225dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/menuLogo"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/information_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:background="@drawable/information_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/photo_select_background"
        android:id="@+id/menu_selection_layout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/access_photos_button"
            android:clickable="true"
            android:background="@drawable/photos_icon"
            android:layout_marginStart="300dp"/>
    </LinearLayout>

</RelativeLayout>
