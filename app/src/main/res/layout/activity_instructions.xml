<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_top"
    android:paddingBottom="@dimen/activity_vertical_margin_bottom"
    tools:context="com.example.justin.myscape.Instructions">

    <TextView android:text="@string/photo_gallery_instructions" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/howto1"
        android:background="@drawable/howto_photogallery"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/addedit_image_instructions" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/howto1"
        android:layout_alignParentStart="true" />

    <TextView android:text="@string/drag_image_instructions" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:id="@+id/howto2"
        android:background="@drawable/howto_addedit"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView3" />

</RelativeLayout>
