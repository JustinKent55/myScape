<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.justin.myscape" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Instructions"
            android:label="@string/title_activity_instructions"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.justin.myscape.MainActivity" />
        </activity>
        <activity
            android:name=".ImageEditView"
            android:label="@string/title_activity_image_edit_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.justin.myscape.MainActivity" />
        </activity>
        <activity
            android:name=".ImageEditActivity"
            android:label="@string/title_activity_image_edit"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.justin.myscape.MainActivity" />
        </activity>
        <activity
            android:name=".AddImage"
            android:label="@string/title_activity_add_image"
            android:parentActivityName=".ImageEditActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.justin.myscape.ImageEditActivity" />
        </activity>
    </application>

</manifest>
